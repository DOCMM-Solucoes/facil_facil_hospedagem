<section class="section is-main-section is-justify-content-center">
  <div class="card has-table has-mobile-sort-spaced">
    <header class="card-header">
      <div class="card-header-title is-centered is-relative" style="height: 50vh;">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email, class: "label" %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-success" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "new-password", class: "input is-success" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-success" %>
          </div>

          <div class="actions">
            <%= f.submit "BortÃ£o", class: "button is-link" %>
          </div>
        <% end %>


      </div>
    </header>
  </div>

</section>


