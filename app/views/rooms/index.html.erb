
<h1><%= t 'app.room_index.title' %></h1>

<div id="rooms">
  <% @rooms.each do |room| %>
    <p><%= room.name %></p>
    <p><%= link_to t('app.room_index.show'), room %></p>
  <% end %>
</div>

<div>
  <% if user_signed_in? && current_user %>
    <%= link_to t('app.room_index.new'), new_room_path %>
    <strong> | </strong>
  <% end %>
  <%= link_to t('home.home'), root_path %>
</div>
