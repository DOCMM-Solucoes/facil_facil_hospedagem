        <div class="field">
            <%= form.text_field :name, class: "input", type: "text" %>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label"><%= t 'app.guide.phone' %></label>
      </div>
      <div class="field-body">
        <div class="field">
            <%= form.text_field :phone, class: "input", type: "text" %>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label"><%= t 'app.guide.cpf' %></label>
      </div>
      <div class="field-body">
