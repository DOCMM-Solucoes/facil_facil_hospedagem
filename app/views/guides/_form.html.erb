      <div class="field-label is-normal">
        <label class="label"><%= t 'app.guide.company' %></label>
      </div>
      <div class="field-body">
        <div class="field">
            <%= form.text_field :company, class: "input", type: "text" %>
        </div>
      </div>
    </div>

