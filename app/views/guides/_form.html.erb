<%= form_with(model: guide) do |form| %>
  <div class="buttons is-right">
    <div class="field">
      <div class="field is-grouped">
        <div>
          <%= form.submit(@guide.new_record? ? t('app.guide.create') : t('app.guide.update'),
                          class: "button is-primary") %>
        </div>
      </div>
    </div>
  </div>
