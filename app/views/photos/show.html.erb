<div class="card has-table has-mobile-sort-spaced">
  <header class="card-header">
    <div class="card-header-title">
      <span class="icon"><i class="mdi mdi-account-multiple"></i></span>
      <h1><%= link_to t('new.photo.title'), new_photo_path %></h1>
    </div>
    <a href="#" class="card-header-icon">
      <span class="icon"><i class="mdi mdi-reload"></i></span>
    </a>
  </header>
  <header class="card-header">
    <div class="card-header-title">
      <p>
      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label">Description</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control is-expanded has-icons-left">
              <%= text_field_tag :name, @photo.description, class: "input", type: "text", disabled: true %>
              <span class="icon is-small is-left"><i class="mdi mdi-account"></i></span>
            </div>
          </div>
        </div>
      </div>
      </p>
    </div>
  </header>
  <div class="card-content">
    <div class="field">
      <% @photo.images.each do |image| %>
        <%= image_tag image, class: 'image-size' %>
      <% end %>
    </div>
    <div>

      <% if user_signed_in? && current_user %>
        <%= link_to "Editar as estrutura", edit_photo_path(@photo) %> |
        <%= button_to "Deletar estrutura", @photo, method: :delete,
                      form: { data: { turbo_confirm: 'VocÃª tem certeza' } } %>
      <% end %>
    </div>
  </div>
</div>
