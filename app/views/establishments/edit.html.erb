<section class="section is-main-section">
  <div class="card">
    <header class="card-header">
      <div class="card-header-title">
        <span class="icon"><i class="mdi mdi-ballot"></i></span>
        <h1><%= t'app.edit.title' %></h1>
      </div>
    </header>
    <div class="card-content">
      <div class="field is-horizontal">
        <div class="field-label">
          <%= render "form", establishment: @establishment %>
        </div>
      </div>
    </div>
  </div>
  <div>
    <%= link_to t('app.edit.show'), @establishment, class:"button is-success has-text-white", type:"button" %>
    <%= link_to t('app.edit.back'), establishments_path, class:"button is-info has-text-white", type:"button" %>
  </div>
</section>
