
<section class="section is-main-section">
  <div class="card">
    <header class="card-header">
      <div class="card-header-title">
        <span class="icon"><i class="mdi mdi-ballot"></i></span>
        <h1><%= t 'app.index.title' %></h1>
      </div>
    </header>
    <div class="card-content">
      <form method="get">
        <div class="field is-horizontal">
          <div class="field-label">
            <div id="establishments">
              <div class="card-content">
                <div class="b-table has-pagination">
                  <div class="table-wrapper has-mobile-cards">
                    <table class="table is-fullwidth is-striped is-hoverable is-sortable is-fullwidth">
                      <thead>
                      <tr>
                        <th></th>
                        <th>Estabelecimento</th>
                        <th></th>
                      </tr>
                      </thead>
                      <tbody>
                      <tr>
                        <td class="is-image-cell">
                          <div class="image">
                            <img src="https://avatars.dicebear.com/v2/initials/rebecca-bauch.svg" class="is-rounded">
                          </div>
                        </td>
                        <% @establishments.each do |establishment| %>
                            <td data-label="Name"><%= establishment.name %></td>
                                <td class="is-actions-cell">
                                  <div class="buttons is-right">
                                    <button class="button is-small is-primary" type="button">
                                      <%= link_to t('app.index.show'), establishment %>
                                      <span class="icon"><i class="mdi mdi-eye"></i></span>
                                    </button>
                                    <button class="button is-small is-danger jb-modal" type="button" data-target="sample-modal">
                                      <%= link_to t('app.show.delete'), @establishment, method: :delete,
                                                    form: { data: { turbo_confirm: t('app.controller.notice_delete') },
                                                            class:"button is-small is-danger jb-modal", type:"button"}%>
                                      <span class="icon"><i class="mdi mdi-trash-can"></i></span>
                                    </button>
                        <% end %>
                          </div>
                        </td>
                      </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div>
    <% if user_signed_in? && current_user %>
      <%= link_to t('app.index.new'), new_establishment_path %> <strong>|</strong>
    <% end %>
    <%= link_to t('home.home'), root_path  %>
  </div>
</section>


