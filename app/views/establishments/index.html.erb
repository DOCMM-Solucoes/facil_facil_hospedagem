<div class="card has-table has-mobile-sort-spaced">
  <header class="card-header">
    <div class="card-header-title">
      <span class="icon"><i class="mdi mdi-account-multiple"></i></span>
      <h1><%= t 'app.index.title' %></h1>
    </div>
    <a href="#" class="card-header-icon">
      <span class="icon"><i class="mdi mdi-reload"></i></span>
    </a>
  </header>

  <div class="buttons is-right">
    <div>
      <%= link_to t('app.index.new'), new_establishment_path, class: "button is-primary", type: "button" %>
      <span class="icon"><i class=""></i></span>
    </div>
  </div>

  <div class="card-content">
    <div id="establishments">
      <% @establishments.each do |establishment| %>
        </div>
        <div class="b-table has-pagination">
          <div class="table-wrapper has-mobile-cards">
            <table class="table is-fullwidth is-striped is-hoverable is-sortable is-fullwidth">
              <thead>
              <tr>
                <th></th>
                <th class="fixed-width">Estabelecimento</th>
                <th class="fixed-width">Dono</th>
                <th class="fixed-width">Estado</th>
              </tr>
              </thead>
              <tbody>
              <tr>
                <td class="is-image-cell">
                  <div class="image">
                    <img src="https://avatars.dicebear.com/v2/initials/rebecca-bauch.svg" class="is-rounded">
                  </div>
                </td>
                <td data-label="Name"><%= establishment.name %></td>
                <td data-label="Company"><%= establishment.hotelier.name %></td>
                <td data-label="City"><%= establishment.address.state %></td>
                <td class="is-actions-cell">
                  <div class="buttons is-right">
                    <button class="button is-small is-info has-text-white jb-modal" type="button">
                      <%= link_to t('app.index.show'), establishment %>
                      <span class="icon is-small"><i class="mdi mdi-eye"></i></span>
                    </button>
                    <button class="button is-small is-warning has-text-white" type="button">
                      <%= link_to t('app.show.edit'), edit_establishment_path(establishment) %>
                      <span class="icon is-small"><i class="mdi mdi-pencil"></i></span>
                    </button>
                    <div type="button" data-target="sample-modal">
                      <%= form_with(model: establishment, url: establishment_path(establishment), local: true, method: :delete,
                                    data: { turbo_confirm: t('app.controller.notice_delete') }) do |form| %>
                        <%= form.button class: "button is-danger jb-modal is-small is-flex" do %>
                          <span><%= t('app.show.delete') %></span>
                          <span class="icon is-small"><i class="mdi mdi-delete"></i></span>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </td>
              </tr>
              </tbody>
            </table>
            <hr>
      <% end %>
      </div>
      </div>
      </div>
</div>
