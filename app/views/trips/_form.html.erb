<%= form_with(model: trip) do |form| %>
  <% if trip.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
        <% trip.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-content">
    <div class="field is-horizontal mt-4">
      <div class="field-label is-normal">
        <label class="label"><%= t('app.trip.establishment_id') %></label>
      </div>
      <div class="field-body">
        <div class="field is-narrow">
          <div class="control">
            <div class="select is-fullwidth">
              <%= form.select :establishment_id,
                              options_from_collection_for_select(Establishment.all, :id, :name, trip.establishment_id),
                              prompt: true %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="field is-horizontal mt-4">
      <div class="field-label is-normal">
        <label class="label"><%= t('app.trip.guide_id') %></label>
      </div>
      <div class="field-body">
        <div class="field is-narrow">
          <div class="control">
            <div class="select is-fullwidth">
              <%= form.select :guide_id,
                              options_from_collection_for_select(Guide.all, :id, :name, trip.guide_id),
                              prompt: true %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div>
    <%= form.label t('app.trip.checkin_date'), style: "display: block" %>
    <%= form.date_field :checkin_date %>
  </div>

  <div>
    <%= form.label t('app.trip.checkin_time'), style: "display: block" %>
    <%= form.time_field :checkin_time %>
  </div>

  <div>
    <%= form.label t('app.trip.checkout_date'), style: "display: block" %>
    <%= form.date_field :checkout_date %>
  </div>

  <div>
    <%= form.label t('app.trip.checkout_time'), style: "display: block" %>
    <%= form.time_field :checkout_time %>
  </div>

  <div>
    <%= form.label t('app.trip.extra_coffee'), style: "display: block" %>
    <%= form.check_box :extra_coffee %>
  </div>

  <div>
    <%= form.label t('app.trip.num_people'), style: "display: block" %>
    <%= form.number_field :num_people %>
  </div>

  <div>
    <%= form.label t('app.trip.num_drivers'), style: "display: block" %>
    <%= form.number_field :num_drivers %>
  </div>

  <div>
    <%= form.label t('app.trip.free_driver'), style: "display: block" %>
    <%= form.check_box :free_driver %>
  </div>

  <div>
    <%= form.label t('app.trip.num_guides'), style: "display: block" %>
    <%= form.number_field :num_guides %>
  </div>

  <div>
    <%= form.label t('app.trip.free_guide'), style: "display: block" %>
    <%= form.check_box :free_guide %>
  </div>

  <div>
    <%= form.label t('app.trip.num_rooms'), style: "display: block" %>
    <%= form.number_field :num_rooms %>
  </div>

  <div>
    <%= form.label t('app.trip.rate_person_day'), style: "display: block" %>
    <%= form.text_field :rate_person_day %>
  </div>

  <div>
    <%= form.label t('app.trip.signal_value'), style: "display: block" %>
    <%= form.text_field :signal_value %>
  </div>

  <div>
    <%= form.label t('app.trip.signal_date'), style: "display: block" %>
    <%= form.date_field :signal_date %>
  </div>

  <div>
    <%= form.label t('app.trip.notes'), style: "display: block" %>
    <%= form.text_area :notes %>
  </div>

  <div>
    <%= form.label t('app.trip.confirmed'), style: "display: block" %>
    <%= form.check_box :confirmed %>
  </div>

  <div>
    <%= form.label t('app.trip.accomplished'), style: "display: block" %>
    <%= form.check_box :accomplished %>
  </div>

  <div>
    <%= form.label t('app.trip.suspended'), style: "display: block" %>
    <%= form.check_box :suspended %>
  </div>

  <div>
    <%= form.submit(@trip.new_record? ? t('app.trip.create') : t('app.trip.update')) %>
  </div>
<% end %>
