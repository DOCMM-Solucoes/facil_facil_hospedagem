<p style="color: green"><%= notice %></p>

<%= render @trip %>

<div>
  <%= link_to t('app.show.back'), trips_path %>
  <% if user_signed_in? && current_user %>
    <%= link_to t('app.show.edit'), edit_trip_path(@trip) %>
    <%= button_to t('app.show.delete'), @trip, method: :delete,
                  form: { data: { turbo_confirm: t('app.controller.notice_delete') } }%>
  <% end %>
</div>
