<div class="card has-table has-mobile-sort-spaced">
  <header class="card-header">
    <div class="card-header-title">
      <span class="icon"><i class="mdi mdi-warehouse"></i></span>
      <h1>Estrutura</h1>
    </div>
  </header>
  <div class="buttons is-right">
    <div>
      <%= link_to 'Nova Estrutura', new_structure_path, class: "button is-primary mdi mdi-plus-thick", type: "button" %>
    </div>
  </div>
  <div class="card-content">
    <div id="photo">
      <div class="b-table has-pagination">
        <div class="table-wrapper has-mobile-cards">
          <table class="table is-fullwidth is-striped is-hoverable is-sortable is-fullwidth">
            <thead>
            <tr>
              <th></th>
              <th>Estrutura</th>
              <th>Descrição Curta</th>
            </tr>
            </thead>
            <tbody>
            <% @structures.each do |structure| %>
              <tr>
                <td></td>
                <td data-label="Title"><%= structure.title %></td>
                <td data-label="Describe"><%= structure.description %></td>
                <td class="is-actions-cell">
                  <div class="buttons is-right has-text-white">
                    <button class="button is-small is-info has-text-white jb-modal" type="button">
                      <%= link_to 'Mostar', structure_path(structure) %>
                      <span class="icon is-small"><i class="mdi mdi-eye"></i></span>
                    </button>
                    <button class="button is-small is-warning has-text-white jb-modal" type="button">
                      <%= link_to 'Editar', edit_structure_path(structure) %>
                      <span class="icon is-small"><i class="mdi mdi-pencil"></i></span>
                    </button>
                    <div type="button" data-target="sample-modal">
                      <%= button_to 'Deletar', structure, method: :delete,
                                    form: { data: { turbo_confirm: t('app.controller.notice_delete') } },
                                    class: "button is-danger jb-modal is-small is-flex" %>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <hr>
        </div>
      </div>
    </div>
  </div>
</div>