<%= form_with(model: hotelier) do |form| %>
  <div class="buttons is-right">
    <div class="field">
      <div class="field is-grouped">
        <div>
          <%= form.submit(@hotelier.new_record? ? t('app.hotelier_form.create') : t('app.hotelier_form.update'),
                          class: "button is-primary") %>
        </div>
      </div>
    </div>
  </div>
  <% if hotelier.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(hotelier.errors.count, "error") %> prohibited this hotelier from being saved:</h2>

      <ul>
        <% hotelier.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-content">
    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label"><%= t('app.hotelier.name') %></label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control is-expanded has-icons-left">
            <%= form.text_field :name, class: "input", type: "text" %>
            <span class="icon is-small is-left"><i class="mdi mdi-account"></i></span>
          </div>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label"><%= t 'app.hotelier.cpf' %></label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control is-expanded has-icons-left">
            <%= form.text_field :cpf, class: "input", type: "text" %>
            <span class="icon is-small is-left"><i class="mdi mdi-account"></i></span>
          </div>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label"><%= t 'app.hotelier.phone_number' %></label>
      </div>
      <div class="field-body">
        <div class="field is-expanded">
          <div class="field has-addons">
            <div class="control">
              <div class="button is-static">
                +55
              </div>
            </div>
            <div class="control is-expanded">
              <%= form.text_field :phone_number, class: "input", type: "text" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label"><%= t 'app.hotelier.plan' %></label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control is-expanded has-icons-left">
            <%= form.text_field :plan, class: "input", type: "text" %>
            <span class="icon is-small is-left"><i class="mdi mdi-account"></i></span>
          </div>
        </div>
      </div>
    </div>

    <div>
      <%= form.fields_for :address do |address_fields| %>
        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <%= t('app.address.street') %>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control is-expanded has-icons-left">
                <%= address_fields.text_field :street, class: "input", type: "text" %>
                <span class="icon is-small is-left"><i class="mdi mdi-account"></i></span>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <%= t('app.address.postal_code') %>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control is-expanded has-icons-left">
                <%= address_fields.text_field :postal_code, class: "input", type: "text" %>
                <span class="icon is-small is-left"><i class="mdi mdi-account"></i></span>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <%= t('app.address.city') %>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control is-expanded has-icons-left">
                <%= address_fields.text_field :city, class: "input", type: "text" %>
                <span class="icon is-small is-left"><i class="mdi mdi-account"></i></span>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">
          <div class="field-label is-normal">
            <%= t('app.address.state') %>
          </div>
          <div class="field-body">
            <div class="field">
              <div class="control is-expanded has-icons-left">
                <%= address_fields.text_field :state, class: "input", type: "text" %>
                <span class="icon is-small is-left"><i class="mdi mdi-account"></i></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>